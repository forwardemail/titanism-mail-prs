{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["./src/lib/*"],
      "$types/*": ["./src/types/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.svelte", "src/env.d.ts"],
  "exclude": ["node_modules"]
}
